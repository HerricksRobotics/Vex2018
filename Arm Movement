
var leftArmForward;
var rightArmForward;
var leftArmBackward;
var rightArmBackward;
var pinchClose;
var pinchOpen;
while(true){
  if(pinchClose){
    Move leftpincher inwards
    Move rightpincher inwards}
 
  if(rightArmForward){
      Move right arm forwards }
    
  if(leftArmForward){
    Move left arm forwards{
  
  if(pinchOpen)
  Move leftpincher outwards
  Move rightpincher outwards}
  
  if(rightArmBackward){
    Move right arm backwards }
    
  if(leftArmBackward){
    Move left arm backwards{
    }
    
